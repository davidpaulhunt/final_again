.container
  .row
    .col-md-2
    .col-md-8
      %br
      %table.table.table-hover#schools
        %thead
          %tr
            %th Name
            %th Location
            %th Needs
        %tbody
          - @schools.each do |school|
            %tr
              %td
                = link_to "#{school.name.titleize}", school
              %td= school.account.location.upcase
              %td
                - school.position_needs.each do |need|
                  = need.position.abbreviation.upcase
    .col-md-2