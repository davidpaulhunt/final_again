- case notification.notifieable_type
  - when "FavoriteSchool"
    %li= link_to "Your school was favorited by #{notification.notifieable.player.first_name}.", notification.notifieable.player
  - when "PositionNeed"
    %li= link_to "#{notification.notifieable.school.name} has added #{notification.notifieable.position.abbreviation.upcase} to their needs.", notification.notifieable.school